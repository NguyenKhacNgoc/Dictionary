@model Dictionary.DTO.UserDTO
<link rel="stylesheet" href="~/Content/Login.css" />
<h2 style="text-align:center">Login Account</h2>
<form method="post" class="login-form" action="/User/Login" onsubmit="return validateForm()">
    <input type="email" id="sEmail" name="sEmail" placeholder="Email" required emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/>
    <input type="password" id="sPassword" name="sPassword" placeholder="Password" required>
    <span id="error" style="color:red;">
        @if (!string.IsNullOrEmpty(TempData["response"] as string))
        {
            @Html.Raw(TempData["response"])
        }
    </span>
    <br />
    <button type="submit" class="btn-login">Login</button>
</form>
<style>
    /* SignUp.css */
    .login-form {
        max-width: 400px;
        margin: 0 auto;
        padding: 20px;
    }

        .login-form h2 {
            font-size: 24px;
            margin-bottom: 20px;
        }

        .login-form input[type="email"],
        .login-form input[type="password"],
        .login-form input[type="password"]:focus {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 16px;
        }


        .login-form button {
            background: #007bff;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 18px;
            margin-top: 10px;
        }

            .login-form button:hover {
                background: #0056b3;
            }

</style>
<script>
    function validateForm() {

        const password = document.getElementById("sPassword")

        const error = document.getElementById("error")

        if (password.value.length < 8 || !/\d/.test(password.value)) {
            error.textContent = 'Mật khẩu bao gồm 8 ký tự và ít nhất 1 số'
            return false
        }
        else {
            error.parentNode.removeChild(error)
            return true

        }


    }
    
</script>

