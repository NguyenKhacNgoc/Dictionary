@model Dictionary.Models.tblWord

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Delete Word</h2>

    <div class="alert alert-danger">
        <strong>Warning!</strong> Are you sure you want to delete this word?
    </div>

    <div class="well">
        <h4>Word Details</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
               Từ 
            </dt>
            <dd>
                @Html.DisplayFor(model => model.sWord)
            </dd>

            <dt>
               Ví dụ 
            </dt>
            <dd>
                @Html.DisplayFor(model => model.sExample)
            </dd>

            <dt>
                Mô tả 
            </dt>
            <dd>
                @Html.DisplayFor(model => model.sDefinition)
            </dd>

            <dt>
                Ngôn ngữ 
            </dt>
            <dd>
                @Html.DisplayFor(model => model.tblLanguage.sLanguage)
            </dd>
            <dt>
              Loại từ 
            </dt>
            <dd>
                @Html.DisplayFor(model => model.tblWord_type.sWordtype)
            </dd>
        </dl>
    </div>

    @using (Html.BeginForm("Delete", "Word", new { id = Model.Id }, FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Delete" class="btn btn-danger" />
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
            </div>
        </div>
    }
</div>
